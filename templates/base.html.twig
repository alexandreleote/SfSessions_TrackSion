        {% endblock %}

        {% block javascripts %}
            <script src="js/script.js"></script>
        {% endblock %}
    </head>
    <body>
        
        <header> 
            <div class="header-mobile">
                <h1><span class="title-pre">Track</span><span class="title-post">Sion</span></h1>
            </div>
        </header>
        
        <nav>
            <div class="navbar-mobile">
                <a href="{{ path('app_home') }}"><i class="fa-solid fa-house"></i></a>
                <a href="{{ path('app_session') }}"><i class="fa-regular fa-rectangle-list"></i></a>
                <a href="#"><i class="fa-solid fa-users"></i></a>
                <a href="#"><i class="fa-solid fa-user-gear"></i></a>
            </div>
        </nav>

        <main>
            {% block body %}{% endblock %}
        </main>
    
        <footer class="footer-mobile">
            <p>&copy; {{ "now"|date("Y") }} TrackSion &trade; - </p>
        </footer>
    </body>
</html>
